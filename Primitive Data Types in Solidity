// Write a smart contract that takes some ether from the user. Find out its value in units of:



// SPDX-License-Identifier: Unlincensed

 
pragma solidity >=0.7.0;


contract EtherConverter {
    function getEtherValueInWei() public pure returns (uint256) {
        return 1 wei;
    }
    
    function getEtherValueInEther() public pure returns (uint256) {
        return 1 ether;
    }

    function getEtherValueInGwei() public pure returns (uint256) {
        return 1 gwei;
    }

    function convertToWei(uint256 _etherAmount) public pure returns (uint256) {
        return _etherAmount * 1 ether;
    }
    function convertToEther(uint256 _weiAmount) public pure returns (uint256) {
        return _weiAmount / 1 ether;
    }
    function convertToGwei(uint256 _weiAmount) public pure returns (uint256) {
        return _weiAmount / 1 ether;
    }
}
